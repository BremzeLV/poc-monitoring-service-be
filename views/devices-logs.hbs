<div class="max-w-6xl mx-auto">
    <div class="flex items-center justify-between mb-6">
        <h2 class="text-xl font-semibold">Logs for Device #{{deviceId}}</h2>
        <a href="/" class="text-blue-600 hover:underline text-sm">‚Üê Back to Devices</a>
    </div>

    {{#if deviceLogs.length}}
    <table class="min-w-full divide-y divide-gray-200 bg-white shadow rounded-lg overflow-hidden">
        <thead class="bg-gray-100">
            <tr>
                <th class="px-6 py-3 text-left text-xs font-semibold text-gray-700">ID</th>
                <th class="px-6 py-3 text-left text-xs font-semibold text-gray-700">Status</th>
                <th class="px-6 py-3 text-left text-xs font-semibold text-gray-700">Ping Time</th>
                <th class="px-6 py-3 text-left text-xs font-semibold text-gray-700">CPU Load (%)</th>
                <th class="px-6 py-3 text-left text-xs font-semibold text-gray-700">Memory Usage (%)</th>
                <th class="px-6 py-3 text-left text-xs font-semibold text-gray-700">Software Version</th>
                <th class="px-6 py-3 text-left text-xs font-semibold text-gray-700">Firmware Version</th>
                <th class="px-6 py-3 text-left text-xs font-semibold text-gray-700">Hardware Version</th>
                <th class="px-6 py-3 text-left text-xs font-semibold text-gray-700">Created At</th>
            </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
            {{#each deviceLogs}}
            <tr class="hover:bg-gray-50">
                <td class="px-6 py-1 text-xs text-gray-900">{{this.id}}</td>
                <td class="px-6 py-1">
                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium
                    {{#if (ifEquals this.status 'online')}} bg-green-100 text-green-800
                    {{else if (ifEquals this.status 'offline')}} bg-red-100 text-red-800
                    {{else}} bg-gray-100 text-gray-800
                    {{/if}}">
                        {{this.status}}
                    </span>
                </td>
                <td class="px-6 py-1 text-xs text-gray-600">{{formatDate this.pingAt}}</td>
                <td class="px-6 py-1 text-xs text-gray-600">{{this.cpuLoad}}</td>
                <td class="px-6 py-1 text-xs text-gray-600">{{this.memoryUsage}}</td>
                <td class="px-6 py-1 text-xs text-gray-600">{{this.swVersion}}</td>
                <td class="px-6 py-1 text-xs text-gray-600">{{this.fwVersion}}</td>
                <td class="px-6 py-1 text-xs text-gray-600">{{this.hwVersion}}</td>
                <td class="px-6 py-1 text-xs text-gray-600">{{formatDate this.createdAt}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    {{else}}
    <div class="text-center text-gray-500 border border-dashed border-gray-300 p-8 rounded-lg bg-gray-50">
        <p class="text-lg font-medium">No logs found for this device.</p>
        <p class="text-sm mt-2">Try again later or verify the device is active.</p>
    </div>
    {{/if}}
</div>