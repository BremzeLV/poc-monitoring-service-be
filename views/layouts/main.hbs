            return dayjs(date).format('YYYY-MM-DD HH:mm:ss');
        }

        document.addEventListener('DOMContentLoaded', () => {
            document.querySelectorAll('.date').forEach(el => {
                el.textContent = formatDate(el.dataset.raw);
            });
        });
